<div class="flex flex-row gap-2" data-qa="pairing-table" id="pairing-table">
  <section class="flex grow flex-col gap-2">
    <%= for task <- @current_tasks do %>
      <section class="flex flex-row h-40" data-qa="workstream">
        <.live_component
          id={task.id}
          module={PairDanceWeb.AppLive.TeamPage.WorkTrackComponent}
          task={task}
        />
      </section>
    <% end %>
  </section>

  <section class="flex flex-col bg-emerald-50 p-2 text-center">
    <h2 class="font-bold">Available ğŸ’»</h2>
    <div class="flex flex-row gap-8 h-full">
      <section
        id="available-members"
        data-qa="available-members"
        phx-hook="Reassign"
        phx-target={@myself}
        class="flex flex-col gap-8 pt-4 grow w-40 align-middle place-items-center"
      >
        <%= for member <- @available_members do %>
          <.live_component
            id={"#{member.user.id}-unassigned"}
            module={PairDanceWeb.AppLive.TeamPage.MemberComponent}
            member={member}
          />
        <% end %>
      </section>
    </div>
  </section>

  <section class="flex flex-col bg-rose-50 p-2 text-center">
    <h2 class="font-bold">Not pairing âŒ</h2>
    <section
      id="unavailable-members"
      data-qa="unavailable-members"
      phx-hook="Reassign"
      phx-target={@myself}
      class="flex flex-col gap-8 pt-4 grow w-40 align-middle place-items-center h-full"
    >
      <%= for member <- @unavailable_members do %>
        <.live_component
          id={"#{member.user.id}-unavailable"}
          module={PairDanceWeb.AppLive.TeamPage.MemberComponent}
          member={member}
        />
      <% end %>
    </section>
  </section>
</div>
